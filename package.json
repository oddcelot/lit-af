  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "list": "vitest list",
    "test:ui": "vitest --ui",
    "analyze": "cem analyze --litelement --format vscode --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "generate:ce-vscode": "web-component-analyzer-webtypes  analyze \"src/**/*.component.ts\" --format vscode --outFile custom-elements.html-data.json",
    "storybook": "storybook dev -p 6006 --disable-telemetry --no-open",
    "storybook:build": "storybook build --disable-telemetry"
  },
  "dependencies": {
    "@fontsource-variable/nunito": "5.1.1",
    "@storybook/addon-a11y": "8.5.4",
    "@storybook/addon-interactions": "8.5.4",
    "@storybook/addon-links": "8.5.4",
    "@storybook/manager-api": "8.5.4",
    "@storybook/theming": "8.5.4",
    "lit": "3.2.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.4",
    "@custom-elements-manifest/analyzer": "0.10.4",
    "@storybook/addon-essentials": "8.5.4",
    "@storybook/blocks": "8.5.4",
    "@storybook/test": "8.5.4",
    "@storybook/web-components": "8.5.4",
    "@storybook/web-components-vite": "8.5.4",
    "@types/node": "22.13.1",
    "@vitest/browser": "3.0.5",
    "jsdom": "26.0.0",
    "lit-analyzer": "2.0.3",
    "playwright": "1.50.1",
    "storybook": "8.5.4",
    "ts-lit-plugin": "2.0.2",
    "typescript": "5.7.3",
    "vite": "6.1.0",
    "vitest": "3.0.5",
    "web-component-analyzer-webtypes": "2.0.12"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "msw"
    ]
  }
}
